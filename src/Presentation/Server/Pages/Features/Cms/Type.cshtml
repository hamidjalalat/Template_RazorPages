@page "/type/{culture?}/{name?}"
@model Server.Pages.Features.Cms.TypeModel

@inject Persistence.DatabaseContext DatabaseContext

@using Microsoft.EntityFrameworkCore

@{
	ViewData[Constants.ViewDataKeyName.PageTitle] = Model.ViewModel.Title;
	ViewData[Constants.ViewDataKeyName.PageDescription] = Model.ViewModel.Description;
}

@if (string.IsNullOrWhiteSpace(value: Model.ViewModel.CoverImageUrl) == false)
{
	<div class="row">
		<div class="col">
			<img src="@(Model.ViewModel.CoverImageUrl)" alt="@(Model.ViewModel.Title)" class="img-fluid">
		</div>
	</div>
}

@if (string.IsNullOrWhiteSpace(value: Model.ViewModel.Body) == false)
{
	<div class="row mt-3">
		<div class="col">
			@(Html.Raw(Model.ViewModel.Body))
		</div>
	</div>
}

<div class="mt-3">
	<partial name="Features/Cms/PartialViews/_DisplayPostsByTypeId" model="Model.ViewModel.Id" />
</div>
